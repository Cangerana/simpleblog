<div id="<%= dom_id author %>">
  <div class="container-fluid main-container">
    <div class="col-md-offset-2 col-md-8 content">
      <div class="panel panel-defaul">
        <div class="panel-heading">
          <h1>Author <%= @author.name %></h1>
        </div>
      
        <div class="panel-body">
          <div class="row well">
            <div class="col-md-6">
              <strong>E-mail:</strong>
              <p><%= @author.email %></p>
            </div>
            <div class="col-md-6">
              <strong>Site:</strong>
              <p><%= @author.site %></p>
            </div>
          </div>
          <div class="row well">
            <div class="col-md-12">
              <h4><b>Profile:</b></h4>
              <div class="container">
                <%= markdown @author.profile %>
              </div>
            </div>
          </div>

          <div class="row well">
            <div class="col-md-12">
              <h3><b>Post:</b></h4>
              <%= render 'posts/posts_table', data: current_user&.author == @author ? @author.posts : @author.posts.where(visible: true) %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= button_to "Delete", @author, method: :delete, class: 'btn btn-primary pull-left' if user_is_admin? %>

              <%= link_to "Back", authors_path,  class: 'btn btn-primary pull-right' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
