        <li><%= link_to "New Post", new_post_path, class: "btn"%></li>
        <li><%= button_to "Log Out", destroy_user_session_path, method: :delete, remote: true, class: "btn btn-link" %></li>
      <% else %>
        <li><%= link_to "Login", new_user_session_path, class: "btn"%></li>
      <% end %>
    </ul>
  </div>
