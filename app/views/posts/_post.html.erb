<div id="<%= dom_id post %>">
  <div class="container-fluid main-container">
    <div class="col-md-offset-2 col-md-8 content">
      <div class="panel panel-defaul">
        <div class="panel-heading">
          <h1><%= @post.title %></h1>
        </div>
      
        <div class="panel-body">
          <div class="row well">
            <div class="col-md-12">
              <div class="container">
                <%= markdown @post.content %>
              </div>
            </div>
          </div>

          <div class="row well">
            <div class="col-md-6">
              <strong>By:</strong>
              <p><%= @post.author.name %></p>
            </div>
            <div class="col-md-6">
              <strong>At:</strong>
              <p><%= @post.created_at.to_date %></p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= button_to "Delete", @post, method: :delete, class: 'btn btn-primary pull-left' if (user_signed_in? and @post.author.user == current_user) or user_is_admin? %>  
              <%= link_to "Back", posts_path,  class: 'btn btn-primary pull-right' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
